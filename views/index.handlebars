<h1>EAT A BURGER</h1>

<h2>PREVIOUSLY DEVOURED</h2>

<ul>
    {{#each burgers}}
        {{#if devoured}}
            {{burger_name}}

        {{/if}}
    {{/each}}
</ul>

<h2>UNDEVOURED</h2>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
            {{burger_name}}

            <button class="change-devoured" data-id="{{id}}" data-devoured="{{devoured}}">
                {{#if devoured}}REQUEST ANOTHER!{{else}}DEVOUR!{{/if}}
            </button>
        {{/unless}}
    {{/each}}
</ul>

<h2>ADD ANOTHER BURGER</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burger">BURGER NAME</label>
        <input type="text" id="burger" name="name">
    </div>

    <div class="form-group">
        <label for="devoured"></label><br>
        <input type="radio" name="devoured" value="0" checked>UNDEVOURED<br>
        <input type="radio" name="devoured" value="1"> PREVIOUSLY DEVOURED
    </div>

    <button type="submit">ADD THAT BURGER</button>
</form>