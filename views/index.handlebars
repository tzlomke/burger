<h1 class="header">EAT A BURGER</h1>

<div class="burger-menu">
    
    <div class="devoured">
        <h2>PREVIOUSLY DEVOURED</h2>

        <ul>
            {{#each burgers}}
                {{#if devoured}}
                    <li class="burger">
                        {{burger_name}}
                    </li>
                {{/if}}
            {{/each}}
        </ul>
    </div>

    <div class="undevoured">
        <h2>UNDEVOURED</h2>

        <ul>
            {{#each burgers}}
                {{#unless devoured}}
                    <li class="burger">
                        {{burger_name}}

                        <button class="change-devoured" data-id="{{id}}" data-devoured="{{devoured}}">
                            DEVOUR!
                        </button>
                    </li>
                {{/unless}}
            {{/each}}
        </ul>
    </div>
    
</div>

<h2>ADD ANOTHER BURGER</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burger">BURGER NAME</label>
        <input type="text" id="burger" name="name">
    </div>

    <button type="submit">ADD THAT BURGER</button>
</form>